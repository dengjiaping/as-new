    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="22dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_rectangle_white_grayline"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/icon_next"
            android:padding="20dp"
            android:text="出生日期"/>

        <TextView
            android:id="@+id/perfect_tv_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:padding="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_rectangle_white_grayline"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/icon_next"
            android:padding="20dp"
            android:text="胎次"/>

        <TextView
            android:id="@+id/perfect_tv_height"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:padding="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_rectangle_white_grayline"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/icon_next"
            android:padding="20dp"
            android:text="产后时间"/>

        <TextView
            android:id="@+id/perfect_tv_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:padding="20dp"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/perfect_btn_save"
        style="@style/btn_pink"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="40dp"
        android:text="提交"/>
    <TextView

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:id="@+id/invitation_root"
              android:layout_height="match_parent"
              android:background="#fff4f6"
              android:orientation="vertical"
    >

    <include layout="@layout/view_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="12dp"
                android:adjustViewBounds="true"
                android:src="@drawable/invitation_header"
                />

            <TextView
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/invitation_body"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="邀请有奖"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/invitation_body_2"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="送给她4天会员资格，对方首次用微信登录APP时，您将获得5天会员资格。"
                    android:textColor="@color/colorPink"
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/invitation_btn"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_bg"
                    android:text="立即邀请好友"
                    android:textColor="@color/selector_btn_text"
                    android:textSize="16dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="【活动细则】"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:padding="12dp"
                android:text="1.被邀请人需为从未使用过“如初康复”的新用户，新用户首次成功登录后算邀请成功；\n\n2.您每成功邀请一个新用户，即可获得5天会员资格，自动续期到您的会员时间内。"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorPink"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="14sp"
                android:gravity="center"
                android:textIsSelectable="true"
                android:text="* 有任何关于本活动的问题请联系微信客服：ruchuclub1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:visibility="visible"
        android:background="#22000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/invitation_tv0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/ripple_with_color"
            android:padding="12dp"
            android:textColor="@color/colorGray3"
            android:textSize="16sp"/>

        <TextView
            android:textSize="16sp"
            android:id="@+id/invitation_tv1"
            android:text="邀请详情 >"
            android:visibility="gone"
            android:background="@drawable/ripple_with_color"

            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:textColor="@color/colorGray3"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
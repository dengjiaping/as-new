<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <include layout="@layout/view_header"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorXmlBg"
            android:orientation="vertical">


            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:elevation="1dp"
                            android:orientation="vertical">

                            <com.youth.banner.Banner
                                android:id="@+id/community_banner"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                />


                            <LinearLayout
                                android:id="@+id/community_ll_fine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:background="@drawable/ripple_with_color"
                                android:paddingTop="12dp"
                                android:paddingBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="查看更多康复干货   >"
                                    android:textColor="@color/colorPink"
                                    android:textSize="14sp"/>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/white"
                            android:elevation="1dp"
                            android:orientation="vertical"
                            >
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="22dp"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text="社区达人"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"/>
                                <TextView
                                    android:id="@+id/tv_expert_change"
                                    android:layout_width="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:text="换一批"
                                    android:layout_marginRight="22dp"
                                    android:textColor="@color/colorPink"
                                    android:layout_height="wrap_content"/>
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/ll_expert0"
                                    android:visibility="invisible"
                                    android:background="@drawable/ripple_with_color"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp">


                                    <com.jkpg.ruchu.widget.CircleImageView
                                        android:id="@+id/expert_image0"
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@color/colorGray2"/>

                                    <TextView
                                        android:id="@+id/expert_name0"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:ellipsize="marquee"
                                        android:singleLine="true"
                                        android:text="我是达人"
                                        android:textSize="12dp"/>

                                    <CheckBox
                                        android:id="@+id/expert_cb0"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/select_bd_bg"
                                        android:button="@null"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:text="关注"
                                        android:textColor="@color/select_bd_text_color"
                                        android:textSize="10dp"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:background="@drawable/ripple_with_color"
                                    android:id="@+id/ll_expert1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp">


                                    <com.jkpg.ruchu.widget.CircleImageView
                                        android:id="@+id/expert_image1"

                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@color/colorGray2"/>

                                    <TextView
                                        android:id="@+id/expert_name1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:ellipsize="marquee"
                                        android:singleLine="true"
                                        android:textSize="12dp"/>

                                    <CheckBox
                                        android:id="@+id/expert_cb1"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/select_bd_bg"
                                        android:button="@null"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:text="关注"
                                        android:textColor="@color/select_bd_text_color"
                                        android:textSize="10dp"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:background="@drawable/ripple_with_color"
                                    android:id="@+id/ll_expert2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp">


                                    <com.jkpg.ruchu.widget.CircleImageView
                                        android:id="@+id/expert_image2"

                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@color/colorGray2"/>

                                    <TextView
                                        android:id="@+id/expert_name2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:ellipsize="marquee"
                                        android:singleLine="true"
                                        android:textSize="12dp"/>

                                    <CheckBox
                                        android:id="@+id/expert_cb2"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/select_bd_bg"
                                        android:button="@null"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:text="关注"
                                        android:textColor="@color/select_bd_text_color"
                                        android:textSize="10dp"
                                        />


                                </LinearLayout>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:background="@drawable/ripple_with_color"
                                    android:id="@+id/ll_expert3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:paddingBottom="12dp"
                                    android:paddingTop="12dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp">


                                    <com.jkpg.ruchu.widget.CircleImageView
                                        android:id="@+id/expert_image3"

                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@color/colorGray2"/>

                                    <TextView
                                        android:id="@+id/expert_name3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginTop="5dp"
                                        android:ellipsize="marquee"
                                        android:singleLine="true"
                                        android:textSize="12dp"/>

                                    <CheckBox
                                        android:id="@+id/expert_cb3"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/select_bd_bg"
                                        android:button="@null"
                                        android:checked="true"
                                        android:gravity="center"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:text="关注"
                                        android:textColor="@color/select_bd_text_color"
                                        android:textSize="10dp"
                                        />


                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@android:color/white"
                            android:elevation="1dp"
                            android:orientation="vertical"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="22dp"
                                android:paddingBottom="8dp"
                                android:paddingTop="8dp"
                                android:text="讨论板块"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"/>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/community_rl_plate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:nestedScrollingEnabled="false"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

        <include
            layout="@layout/base_retry"
            android:visibility="gone"/>


        <include
            layout="@layout/base_loading"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>
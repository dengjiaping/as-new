<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@android:color/white"
        android:paddingBottom="12dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="12dp">

        <com.jkpg.ruchu.widget.CircleImageView
            android:id="@+id/notice_detail_civ_photo"
            android:layout_width="@dimen/photoWH"
            android:layout_height="@dimen/photoWH"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/notice_detail_tv_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="@android:color/black"/>

                <ImageView
                    android:id="@+id/notice_detail_iv_lz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_lz"/>

                <ImageView
                    android:id="@+id/notice_detail_iv_fine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_fine"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/notice_detail_tv_tc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/notice_detail_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_gps"
                    android:drawablePadding="5dp"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="#22000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/notice_detail_tv_title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/notice_detail_tv_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorGray3"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/notice_detail_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:lineSpacingExtra="6dp"
            android:textIsSelectable="true"
            android:textColor="#363636"
            android:textSize="15sp"/>

        <com.jkpg.ruchu.widget.nineview.NineGridView
            android:id="@+id/notice_detail_nine_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:ngv_mode="grid"/>

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="#22000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <CheckBox
                android:id="@+id/notice_detail_tv_dz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/selector_zan"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/select_bd_text_color"/>

            <TextView
                android:id="@+id/notice_detail_tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="42dp"
                android:drawableLeft="@drawable/huifu2"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorGray2"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/notice_detail_tv_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorXmlBg"
        android:paddingBottom="12dp"
        android:paddingLeft="22dp"
        android:paddingTop="12dp"/>


</LinearLayout>
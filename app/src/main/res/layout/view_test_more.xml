<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorXmlBg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp">

        <TextView
            android:id="@+id/test_more_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/test_more_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/test_more_tv_body"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/black"
        android:textSize="16dp"/>

    <LinearLayout
        android:id="@+id/test_more_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="22dp">

        <CheckBox
            android:id="@+id/test_more_cb0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_test_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/selector_cb_text_color"
            android:textSize="16dp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/test_more_cb1"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_test_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/selector_cb_text_color"
            android:textSize="16dp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/test_more_cb2"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_test_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/selector_cb_text_color"
            android:textSize="16dp"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/test_more_cb3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/selector_test_rb_bg"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:textColor="@color/selector_cb_text_color"
            android:textSize="16dp"
            android:visibility="gone"/>


    </LinearLayout>

    <!-- <Button
         android:id="@+id/test_detail_btn"s

         style="@style/btn_pink"
         android:layout_width="match_parent"

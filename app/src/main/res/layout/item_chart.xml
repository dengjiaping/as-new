<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">
    <RelativeLayout
        android:id="@+id/item_chart_rl"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="@drawable/shap_rectangle_yellow"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.jkpg.ruchu.widget.leafchart.LeafLineChart
            android:id="@+id/item_chart_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lc_bottomPadding="10dp"
            app:lc_leftPadding="3dp"
            app:lc_rightPadding="0dp"
            app:lc_topPadding="0dp"
            />

        <ImageView
            android:id="@+id/item_chart_iv_start"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_start"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>
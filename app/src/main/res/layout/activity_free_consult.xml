<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <EditText
        android:id="@+id/free_consult_et"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:background="@drawable/shap_rectangle_white_grayline"
        android:gravity="left"
        android:textSize="14sp"
        android:hint="    请详细描述您的症状及身体状况，便于医生进行更准确的分析，如初康复会确保您的隐私安全。"
        android:padding="12dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/free_consult_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        />

    <CheckBox
        android:id="@+id/free_consult_cb"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:text="同时提交档案（推荐）"
        android:textColor="@color/colorGray3"/>

    <Button
        android:id="@+id/free_consult_btn"

        style="@style/btn_pink"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/shap_rectangle_red"
        android:text="提交"/>

</LinearLayout>
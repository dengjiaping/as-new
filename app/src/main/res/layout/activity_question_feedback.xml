<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/view_header"/>

    <EditText
        android:id="@+id/question_feedback_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shap_rectangle_white"
        android:gravity="left"
        android:hint="请输入你的具体描述..."
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="12dp"
        android:text="     请将您的问题和意见描述完整，点击“提交”，我们的工作人员会第一时间予以回复，回复消息会以消息提醒的方式通知到您，感谢你的支持！"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/question_feedback_btn"
            style="@style/btn_pink"
            android:layout_gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="提交反馈"/>
    </LinearLayout>

</LinearLayout>
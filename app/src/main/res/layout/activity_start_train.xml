<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#11522555"
              android:keepScreenOn="true"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <TextView
        android:id="@+id/start_train_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:text="产后康复 LEVEL 0"
        android:textColor="@android:color/black"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/start_train_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计约：00分00秒"/>

        <TextView
            android:id="@+id/start_train_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0 / 0 节"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FAD719"/>


    <FrameLayout
        android:id="@+id/start_train"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FCA29A"
        android:paddingLeft="5dp"
        >

        <com.jkpg.ruchu.widget.leafchart.LeafLineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lc_topPadding="0dp"
            />

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.jkpg.ruchu.widget.leafchart.LineChart
            android:id="@+id/line9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/start_train_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_start"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FAD719"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:id="@+id/start_train_iv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FAD719"
            android:padding="10dp"
            android:src="@drawable/icon_lv3"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/start_train_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            >
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FAD719"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/start_train_tv_progress_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"/>

            <TextView
                android:id="@+id/start_train_tv_progress_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="00:00"/>

            <ProgressBar
                android:id="@+id/start_train_progressBar"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/start_train_tv_progress_total"
                android:layout_toRightOf="@id/start_train_tv_progress_time"
                android:max="100"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:progress="50"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <CheckBox
                android:id="@+id/start_train_iv_voice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_voice_bg"
                android:button="@null"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical"
                android:text="单击训练图停止播放"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:elevation="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_with_color"
            android:orientation="vertical"
            android:paddingRight="22dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingLeft="22dp">

            <TextView
                android:id="@+id/item_fine_note_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/item_fine_note_tv_time"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray3"
                    android:textSize="12sp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/item_fine_note_tv_eulogy"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/zan"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/colorGray2"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/item_fine_note_tv_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/huifu"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:textColor="@color/colorGray2"
                        android:textSize="12sp"/>
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_fine_note_tv_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                />

            <TextView
                android:lineSpacingExtra="4dp"
                android:id="@+id/item_fine_note_iv_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                />
        </LinearLayout>

</LinearLayout>
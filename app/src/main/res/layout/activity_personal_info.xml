<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/personal_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--写错了.....  记得改 这句话存在的话 ..说明我忘记了-->
            <include layout="@layout/view_header"/>

            <RelativeLayout
                android:id="@+id/personal_rl_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:text="我的头像"
                    android:textSize="15sp"/>

                <com.jkpg.ruchu.widget.CircleImageView
                    android:id="@+id/personal_civ_photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_photo"
                    app:civ_border_color="@color/colorPinkTran"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/icon_next"/>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/personal_rl_name"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="18dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:text="昵称"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/personal_tv_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22000000"
                />

            <RelativeLayout
                android:id="@+id/personal_rl_birth"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="18dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:text="生日"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/personal_tv_birth"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22000000"
                />

            <RelativeLayout
                android:id="@+id/personal_rl_height"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="18dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:text="身高"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/personal_tv_height"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22000000"
                />

            <RelativeLayout
                android:id="@+id/personal_rl_weight"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="18dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:text="体重"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/personal_tv_weight"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22000000"
                />

            <RelativeLayout
                android:id="@+id/personal_rl_address"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="18dp"
                    android:drawableRight="@drawable/icon_next"
                    android:gravity="center_vertical"
                    android:text="所在地"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/personal_tv_address"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:textColor="#343434"
                    android:textSize="15sp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#22000000"
                />

            <Button
                android:id="@+id/personal_btn_save"
                style="@style/btn_pink"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="30dp"
                android:text="保存"/>

        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/view_save_success"/>
</RelativeLayout>

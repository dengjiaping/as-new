<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/view_header"/>

    <RadioGroup
        android:id="@+id/train_count_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:background="@drawable/shap_rectangle_white_red"
        android:padding="0dp">

        <RadioButton
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp"
            android:id="@+id/train_count_rb_moon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_rg_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="月"
            android:textColor="@color/select_rg_text_color"
            android:textSize="16sp"/>

        <RadioButton
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="22dp"
            android:paddingLeft="22dp"
            android:id="@+id/train_count_rb_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_rg_bg"
            android:button="@null"
            android:gravity="center"
            android:text="年"
            android:textColor="@color/select_rg_text_color"
            android:textSize="16sp"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/train_count_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>


</LinearLayout>